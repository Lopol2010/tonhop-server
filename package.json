{
  "name": "tonhop-server",
  "version": "1.0.0",
  "description": "Server for tonhop bridge",
  "source": "./src/app.ts",
  "main": "./dist/index.js",
  "author": "Lopol2010",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "dotenvx run -f .env.production -- node dist/app.js",
    "build": "dotenvx run -f .env.production -- tsc --skipLibCheck",
    "gen:prod": "cross-env NODE_ENV=production wagmi generate",
    "gen:dev": "cross-env NODE_ENV=development wagmi generate",
    "gen:hardhat": "cross-env NODE_ENV=development MODE=hardhat wagmi generate",
    "dev": "dotenvx run -f .env.development -- tsc-watch --skipLibCheck -p ./tsconfig.json --onSuccess \"node dist/app.js\"",
    "dev2": "tsc-watch --skipLibCheck -p ./tsconfig.json --onSuccess \"dotenvx run -f .env.development -- node dist/app.js\"",
    "test:hardhat": "dotenvx run -f .env.hardhat -- jest --forceExit --runInBand",
    "test": "dotenvx run -f .env.development -- jest --forceExit --runInBand"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^0.45.0",
    "@orbs-network/ton-access": "^2.3.3",
    "@ton/core": "^0.56.3",
    "@ton/crypto": "^3.2.0",
    "@ton/sandbox": "^0.20.0",
    "@ton/ton": "^13.11.2",
    "@typegoose/typegoose": "^12.5.0",
    "@types/jest": "^29.5.12",
    "@types/koa": "^2.15.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-router": "^7.4.8",
    "@types/node": "^20.14.1",
    "@types/supertest": "^6.0.2",
    "@wagmi/cli": "^2.1.8",
    "axios": "^1.7.2",
    "axios-mock-adapter": "^1.22.0",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "envalid": "^8.0.0",
    "eslint": "^9.4.0",
    "jest": "^29.7.0",
    "koa": "^2.15.3",
    "koa-bodyparser": "^4.4.1",
    "koa-router": "^12.0.1",
    "mongodb-memory-server": "^9.3.0",
    "mongoose": "^8.4.3",
    "node-graceful-shutdown": "^1.1.5",
    "p-queue": "npm:@esm2cjs/p-queue@^7.3.0",
    "prettier": "^3.3.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.4",
    "tsc-watch": "^6.2.0",
    "typescript": "^5.4.5",
    "viem": "^2.13.6"
  }
}
